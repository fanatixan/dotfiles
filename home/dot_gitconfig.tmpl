[init]
	defaultBranch = main

[core]
	editor = vim
	autocrlf = input
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true

[user]
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHlr3NBIFhX1/GtnLT9QQtL+8fIvBSvSzEoHf3LMR2Li
	name = Attila-Fejer
	email = attila@fejer.io
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[commit]
	gpgsign = true

[push]
	autoSetupRemote = true
[pull]
	rebase = true
[rebase]
	updateRefs = true
[merge]
	conflictsyle = zdiff3
[submodule]
	recurse = true

[include]
	path = ~/project/.gitconfig

{{ if (lookPath "git-lfs") -}}
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
{{ end -}}
