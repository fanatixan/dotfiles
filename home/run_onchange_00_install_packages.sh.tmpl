#!/usr/bin/env bash

{{- if lookPath "brew" }}
brew bundle --file=/dev/stdin <<EOF
{{ range .packages.universal -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.brew.brews -}}
brew {{ . | quote }}
{{ end -}}
{{- if (eq .chezmoi.os "darwin") and (.physical_computer) }}
{{ range .packages.brew.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.brew.appstore -}}
mas {{ .name | quote }}, id: {{ .id }}
{{ end -}}
{{ end -}}
EOF

{{- else if lookPath "apt" }}
# Debian/Ubuntu
sudo apt update
sudo apt install -y \
{{ range .packages.universal -}}
  {{ . | quote }} \
{{ end -}}
{{ range .packages.apt -}}
  {{ . | quote }} \
{{ end -}}

{{- else if lookPath "dnf" }}
# Fedora/RHEL
sudo dnf check-update
sudo dnf install -y \
{{ range .packages.universal -}}
  {{ . | quote }} \
{{ end -}}
{{ range .packages.dnf -}}
  {{ . | quote }} \
{{ end -}}

{{- else if lookPath "apk" }}
# Alpine
sudo apk update
sudo apk add \
{{ range .packages.universal -}}
  {{ . | quote }} \
{{ end -}}
{{ range .packages.apk -}}
  {{ . | quote }} \
{{ end -}}

{{ else -}}
echo "No package manager found"
exit 1
{{ end -}}
